<%= form_with(model: [@professional, @appointment]) do |a| %>
    <div>
        <%= a.label :date %>
        <%= a.datetime_field :date %>
    </div>
    <div>
        <%= a.text_field :professional_id, value: @professional.id, type:'hidden'%>
    </div>
    <div>
        <%= link_to 'Volver', professional_appointments_path(@professional), :class => 'btn btn-mini btn-outline-dark' %>
        <%= a.submit "Guardar", :class => 'btn btn-mini btn-outline-success'%>
    </div>
<% end %>
