<%= form_with(model: [@professional, @appointment]) do |a| %>
    <div>
        <%= a.label :date %>
        <%= a.datetime_field :date %>
    </div>
    <div>
        <%= a.label :patient_name %>
        <%= a.text_field :patient_name %>
    </div>
    <div>
        <%= a.label :patient_surname %>
        <%= a.text_field :patient_surname %>
    </div>
    <div>
        <%= a.label :patient_phone %>
        <%= a.text_field :patient_phone %>
    </div>
    <div>
        <%= a.label :notes %>
        <%= a.text_area :notes %>
    </div>
    <div>
        <%= a.text_field :professional_id, value: @professional.id, type:'hidden'%>
    </div>
    <div>
        <%= a.submit %>
    </div>
<% end %>
<%= link_to 'Volver', professional_appointments_path(@professional) %>