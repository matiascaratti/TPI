<%= form_with(model: [@professional, @appointment]) do |a| %>
    <div class="form-group row">
        <%= a.label :date, "Fecha y hora:", :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
            <%= a.datetime_field :date, required:'true'%>
        </div>
    </div>
    <div class="form-group row">
        <%= a.label :patient_name, "Nombre del paciente:", :class=>"col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= a.text_field :patient_name, required:'true', :class=>"form-control"%>
        </div>
    </div>
    <div class="form-group row">
        <%= a.label :patient_surname, "Apellido del paciente:", :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= a.text_field :patient_surname, required:'true', :class => "form-control"%>
        </div>
    </div>
    <div class="form-group row">
        <%= a.label :patient_phone, "TelÃ©fono del paciente:", :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= a.text_field :patient_phone, required:'true', :class => "form-control"%>
        </div>
    </div>
    <div class="form-group row">
        <%= a.label :notes, "Notas(opcional):", :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
            <%= a.text_area :notes, :class => "form-control" %>
        </div>
    </div>
    <div>
        <%= a.text_field :professional_id, value: @professional.id, type:'hidden'%>
    </div>
    <div>
        <%= link_to 'Volver', professional_appointments_path(@professional), :class =>'btn btn-mini btn-outline-dark'%>
        <%= a.submit "Crear", :class =>'btn btn-mini btn-outline-success'%>
    </div>
<% end %>
