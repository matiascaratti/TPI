<%= form_with(model: [@professional, @appointment]) do |a| %>
    <div>
        <%= a.label :date, "Fecha y hora:"%>
        <%= a.datetime_field :date, required:'true'%>
    </div>
    <div>
        <%= a.label :patient_name, "Nombre del paciente:" %>
        <%= a.text_field :patient_name, required:'true'%>
    </div>
    <div>
        <%= a.label :patient_surname, "Apellido del paciente:" %>
        <%= a.text_field :patient_surname, required:'true'%>
    </div>
    <div>
        <%= a.label :patient_phone, "TelÃ©fono del paciente:" %>
        <%= a.text_field :patient_phone, required:'true' %>
    </div>
    <div>
        <%= a.label :notes, "Notas(opcional):"%>
        <%= a.text_area :notes%>
    </div>
    <div>
        <%= a.text_field :professional_id, value: @professional.id, type:'hidden'%>
