<h2>Nuevo Usuario</h2>

<%= form_for @user do |f| %>

  <div class="form-group row">
    <%= f.label :email , "Email: ", :class => "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , :class=>"form-control"%>
    </div>
  </div>

  
  <%= f.label :role, "Rol: ", :class => "col-sm-2 col-form-label"%>
  <%= f.select :role, options_for_select(["admin","assistant","consultant"], :selected=> params[:role]),
  {}, { :class => 'span3 controls controls-row' } %>

  <div class="form-group row">
    <%= f.label :password, "Contraseña: ", :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "new-password" , :class=>"form-control"%>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, "Confirme contraseña: ", :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>"form-control" %>
    </div>
  </div><br>

  <div class="actions">
    <%= link_to "Volver", users_path, :class =>'btn btn-mini btn-outline-dark' %>
    <%= f.submit "Crear", :class =>'btn btn-mini btn-outline-success' %>
  </div>
<% end %>
